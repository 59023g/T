.ng-enter,
.ng-leave
  transition-timing-function ease
  transition-duration 250ms
  transition-property opacity

.ng-enter
  opacity 0
  &.ng-enter-active
    opacity 1

.ng-leave
  opacity 1
  &.ng-leave-active
    opacity 0

.crossFade
  &.ng-enter
    transition-duration 100ms
    opacity 0
    &.ng-enter-active
      opacity 1
  &.ng-leave
    transition-duration 100ms
    opacity 1
    &.ng-leave-active
      opacity 0

.slideRight
  opacity 1 !important
  &.ng-enter
    transition-property none
    transform translate3d(-100%,0,0)
    &.ng-enter-active
      transition-property all
      transform translate3d(0,0,0)
  &.ng-leave
    &.ng-leave-active
      transition-property all
      transform translate3d(100%,0,0)

.slideLeft.ng-enter,
.slideLeft.ng-leave,
.slideRight.ng-enter,
.slideRight.ng-leave
  transition-property all
  transform translate3d(0,0,0)

.slideLeft
  opacity 1 !important
  -webkit-transition all 1s
  transition all 1s
  &.ng-enter
    transition-property none
    transform translate3d(100%,0,0)
    left 100%
    &.ng-enter-active
      transition-property all
      transform translate3d(0,0,0)
  &.ng-leave
    transition-property all
    transform translate3d(0,0,0)
    left 0
    &.ng-leave-active
      transition-property all
      transform translate3d(-100%,0,0)

.slideDown
  &.ng-enter
    transition-property none
    transform translate3d(0,-100%,0)
    &.ng-enter-active
      transition-property all
      transform translate3d(0,0,0)
      left -100%
  &.ng-leave
    transition-property all
    transform translate3d(0,0,0)
    &.ng-leave-active
      transition-property all
      transform translate3d(0,100%,0)

.slideUp
  opacity 1 !important
  &.ng-enter
    transition-property none
    transform translate3d(0,100%,0)
    &.ng-enter-active
      transition-property all
      transform translate3d(0,0,0)
      .slideRight.ng-enter 
        left -100%
  &.ng-leave
    transition-property all
    transform translate3d(0,0,0)
    .slideRight.ng-enter.ng-enter-active 
      left 0
    &.ng-leave-active
      transition-property all
      transform translate3d(0,-100%,0)
      .slideRight.ng-leave.ng-leave-active 
        left 100%

