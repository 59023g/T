// Social Media 
.fb
  background #3B5998
  &:hover
    background #2b4582
  .logo
    float left
    background-image url('//d33w9bm0n1egwm.cloudfront.net/assets/logos/socialIcon.png')
    background-position 0 0
    background-repeat no-repeat
    background-size 42px
    width 16px
    margin-right 10px
    height 22px
  &.small
    .icn-hm
      margin-right 8px
      margin-top -3px

.fb:active,.fb:focus,.fb.active
  background-color #243d79
  background-image none
  box-shadow inset 0px 1px 0px rgba(50, 50, 50, 0.4)
  -moz-box-shadow inset 0px 1px 0px rgba(50, 50, 50, 0.4)
  -webkit-box-shadow inset 0px 1px 0px rgba(50, 50, 50, 0.4)

button.fb,button.tw,button.yt,button.in,button.rss,button.gp,button.linkedin,button.vn,button.tb
  padding 8px 20px
  color white
  border-radius 3px
  font-size 18px
  float left
  border none
  cursor pointer
  -webkit-transition background 0.2s ease-in
  -moz-transition background 0.2s ease-in
  -o-transition background 0.2s ease-in
  transition background 0.2s ease-in

.fb:hover,.tw:hover,.yt:hover,button.in:hover,a.in:hover,.pn:hover,button.rss:hover,a.rss:hover,button.gp:hover,a.gp:hover,button.linkedin:hover,a.linkedin:hover,button.vn:hover,a.vn:hover,button.tb:hover,a.tb:hover
